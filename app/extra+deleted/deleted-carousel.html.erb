
<!--Carousel Wrapper-->
<div id="carousel-thumb" class="carousel slide carousel-fade carousel-thumbnails d-none" data-ride="carousel">
    <!--Slides-->

    <div class="carousel-inner" role="listbox">
      <% @photos.each do |photo| %>
        <div class="carousel-item<%= " active" if photo == @photos.first %>">
          <%= image_tag(photo.image_url, class: "d-block w-100 img-fluid obj-fit") %>
        </div>
      <% end %>
    </div>
    <!--/.Slides-->
    <!--Controls-->
    <a class="carousel-control-prev" href="#carousel-thumb" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel-thumb" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    <!--/.Controls-->

      <div id="thumbnail-slider d-none">
          <div class="inner">
              <ul class="thumb-indicators">
                  <% @photos.each_with_index do |photo, index| %>
                    <li data-target="#carousel-thumb" data-slide-to="<%="#{index}" %>"  class= "img-fluid <%= " active" if photo == @photos.first %>">
                      <%= image_tag(photo.image_url, class: "thumb d-block w-100 img-fluid") %>
                    </li>
                  <% end %>
              </ul>
          </div>
          <!-- <div id="thumbnail-slider-prev" class=""></div>
          <div id="thumbnail-slider-next" class="disabled"></div>
          <div id="thumbnail-slider-pause-play"></div> -->
      </div>
      <div id="thumbnail-slider d-none">
          <div class="inner">
            <ul class="carousel-indicators ">
              <% @photos.each_with_index do |photo, index| %>
                <li data-target="#carousel-thumb" data-slide-to="<%="#{index}" %>"  class="img-fluid <%= " active" if photo == @photos.first %>">
                  <%= image_tag(photo.image_url, class: "thumb d-block w-100 img-fluid") %>
                </li>
              <% end %>
            </ul>
          </div>
          <!-- <div id="thumbnail-slider-prev" class=""></div>
          <div id="thumbnail-slider-next" class=""></div> -->
</div>
    <!-- </ol> -->
</div>
<!--/.Carousel Wrapper-->
